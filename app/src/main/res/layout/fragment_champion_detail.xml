<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ChampionDetailFragment"
    android:background="@color/purple_200">

    <ImageView
        android:id="@+id/champion_image"
        android:src="@drawable/karma"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/karma_champion_icon" />

    <TextView
        android:id="@+id/champion_blurb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:padding="10dp"
        android:text="@string/karma_blurb"
        app:layout_constraintTop_toBottomOf="@id/champion_image"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/champion_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:padding="10dp"
        tools:text="Champion Name: Karma"
        app:layout_constraintTop_toBottomOf="@id/champion_blurb"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/champion_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:padding="10dp"
        tools:text="Main Role: Support"
        app:layout_constraintTop_toBottomOf="@id/champion_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/champion_altrole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:padding="10dp"
        android:text="@string/test_secondary_role"
        app:layout_constraintTop_toBottomOf="@id/champion_role"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/champion_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:padding="10dp"
        tools:text="RIOT ID: 43"
        app:layout_constraintTop_toBottomOf="@id/champion_altrole"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/champion_winrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:padding="10dp"
        tools:text="Winrate: 100%"
        app:layout_constraintTop_toBottomOf="@id/champion_id"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>